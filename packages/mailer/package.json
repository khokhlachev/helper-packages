{
  "name": "@khokhlachev/mailer",
  "version": "1.0.6",
  "description": "Personal email client",
  "author": "@khokhlachev",
  "homepage": "https://github.com/khokhlachev/helper-packages",
  "license": "MIT",
  "main": "index.js",
  "module": "esm/index.js",
  "types": "index.d.ts",
  "typings": "index.d.ts",
  "sideEffects": false,
  "directories": {
    "esm": "esm",
    "test": "__tests__"
  },
  "files": [
    "esm",
    "*.md",
    "index.d.ts",
    "index.js",
    "mailchimp-transport.d.ts",
    "mailchimp-transport.js",
    "mailer.d.ts",
    "mailer.js",
    "mailgun-transport.d.ts",
    "mailgun-transport.js",
    "types.d.ts",
    "types.js",
    "validate-recaptcha.d.ts",
    "validate-recaptcha.js"
  ],
  "scripts": {
    "clear": "rm -rf {index,mailchimp-transport,mailer,mailgun-transport,types,validate-recaptcha}{.d.ts,.js} esm/",
    "build:cjs": "tsc",
    "build:es": "tsc -m esNext --outDir esm",
    "build": "yarn clear && yarn build:cjs && yarn build:es",
    "prepublish": "yarn build",
    "postpublish": "yarn clear",
    "test": "echo \"Error: run tests from root\" && exit 1"
  },
  "dependencies": {
    "@khokhlachev/check-env": "^1.0.3",
    "@khokhlachev/utils": "^1.0.3",
    "yup": "^0.32.9"
  },
  "peerDependencies": {
    "@mailchimp/mailchimp_marketing": ">=3.0.58",
    "mailgun-js": ">=0.22.0"
  },
  "peerDependenciesMeta": {
    "@mailchimp/mailchimp_marketing": {
      "optional": true
    },
    "mailgun-js": {
      "optional": true
    }
  },
  "devDependencies": {
    "@mailchimp/mailchimp_marketing": "^3.0.58",
    "@types/mailchimp__mailchimp_marketing": "^3.0.2",
    "@types/mailgun-js": "^0.22.12",
    "@types/node": "^16.7.1",
    "mailgun-js": "^0.22.0",
    "typescript": "^4.3.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
