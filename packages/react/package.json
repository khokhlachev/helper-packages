{
  "name": "@khokhlachev/react",
  "version": "1.0.6",
  "description": "Collection of helpers for React.js",
  "author": "Sergey Khokhlachev <sergey@khokhlachev.com>",
  "homepage": "https://github.com/khokhlachev/helper-packages#readme",
  "license": "MIT",
  "main": "index.js",
  "module": "esm/index.js",
  "types": "index.d.ts",
  "typings": "index.d.ts",
  "sideEffects": false,
  "directories": {
    "esm": "esm",
    "test": "__tests__"
  },
  "files": [
    "esm",
    "lib",
    "*.md",
    "index.js",
    "index.d.ts",
    "raf-value.js",
    "raf-value.d.ts",
    "use-client-only.js",
    "use-client-only.d.ts",
    "use-measure.js",
    "use-measure.d.ts",
    "use-media.js",
    "use-media.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khokhlachev/helper-packages.git"
  },
  "scripts": {
    "clear": "rm -rf {esm,lib}",
    "build:cjs": "tsc",
    "build:es": "tsc -m esNext --outDir esm",
    "build": "yarn clear && yarn build:cjs && yarn build:es",
    "prepublish": "yarn build",
    "test": "echo \"Error: run tests from root\" && exit 1"
  },
  "bugs": {
    "url": "https://github.com/khokhlachev/helper-packages/issues"
  },
  "dependencies": {
    "@khokhlachev/utils": "^1.0.6",
    "body-scroll-lock": "4.0.0-beta.0",
    "react-use": "^17.2.0"
  },
  "devDependencies": {
    "@types/react": "17.0.19",
    "react": "17.0.2"
  },
  "peerDependencies": {
    "react": ">=16.0.0 || >=17.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
